{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python3.9 -m pip install --upgrade pip && python3.9 -m pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd backend && python3.9 main.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
}