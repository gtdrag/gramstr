{
  "name": "gramstr-app",
  "version": "1.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "npm run lint:fix && npm run format:write",
    "types": "tsc --noEmit",
    "lint:fix": "next lint --fix",
    "format:write": "prettier --write \"{app,lib,db,components,context,types}/**/*.{ts,tsx}\" --cache",
    "format:check": "prettier --check \"{app,lib,db,components,context,types}**/*.{ts,tsx}\" --cache",
    "analyze": "ANALYZE=true npm run build",
    "db:local": "npx supabase start",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:push": "npx drizzle-kit push",
    "db:seed": "npx bun db/seed",
    "python:setup": "./scripts/setup-python.sh",
    "python:start": "cd backend && ../venv/bin/python main.py",
    "kill:ports": "lsof -ti:3000 | xargs kill 2>/dev/null; lsof -ti:8000 | xargs kill 2>/dev/null; exit 0",
    "start:all": "npm run kill:ports && concurrently \"npm run dev\" \"npm run python:start\"",
    "backend:dev": "concurrently \"npm run dev\" \"npm run python:start\"",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "electron": "electron .",
    "electron:dev": "ELECTRON_IS_DEV=1 electron .",
    "build:next": "next build",
    "build:next:electron": "next build",
    "build:electron": "npm run build:next:electron && electron-builder",
    "build:mac": "npm run build:next:electron && electron-builder --mac",
    "build:win": "npm run build:next:electron && electron-builder --win",
    "build:linux": "npm run build:next:electron && electron-builder --linux",
    "dist": "npm run build:next:electron && electron-builder --publish never",
    "dist:all": "npm run build:next:electron && electron-builder -mwl --publish never"
  },
  "dependencies": {
    "@clerk/backend": "^1.34.0",
    "@clerk/nextjs": "^6.20.2",
    "@clerk/themes": "^2.2.48",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/supabase-js": "^2.55.0",
    "@swc/helpers": "^0.5.17",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.44.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "nostr-tools": "^2.16.2",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.5",
    "stripe": "^18.2.1",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^3.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jest": "^29.7.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "sharp": "^0.34.3",
    "supabase": "^2.24.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.3",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.gramstr.app",
    "productName": "Gramstr",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/main.js",
      "electron/installer.html",
      "package.json",
      "public/app-icon.png",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "extraResources": [],
    "asarUnpack": [],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "public/app-icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "public/app-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/app-icon.png"
    }
  }
}
