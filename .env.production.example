# Production Environment Variables
# Copy this to .env.production.local and fill in your values
# NEVER commit .env.production.local to version control!

# Database
DATABASE_URL=postgresql://username:password@host:5432/database

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe (if using payments)
STRIPE_SECRET_KEY=sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...

# Clerk (if using authentication) 
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...

# Nostr (optional - can be configured in app)
# NOSTR_PRIVATE_KEY=nsec1...

# Python Backend
PYTHON_PORT=8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Security
API_SECRET_KEY=generate-a-strong-random-key-here
JWT_SECRET=another-strong-random-key

# Feature Flags
ENABLE_INSTAGRAM_AUTH=true
ENABLE_NOSTR_POSTING=true
ENABLE_ANALYTICS=false